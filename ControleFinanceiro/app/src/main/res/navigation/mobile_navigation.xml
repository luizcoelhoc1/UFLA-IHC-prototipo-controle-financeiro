<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.controlefinanceiro.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.controlefinanceiro.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.controlefinanceiro.ui.account.AccountFragment"
        android:label="Nova Conta"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/navigation_config"
        android:name="com.example.controlefinanceiro.ui.config.ConfigFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_config" />
</navigation>